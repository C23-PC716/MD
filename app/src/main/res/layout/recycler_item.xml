<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bordercadangan1"
        android:padding="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/recImage"
            android:src="@drawable/uploadgambardulu"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/recTitle"
            android:textColor="@color/keempat"
            android:text="Tittle"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/recImage"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/recDesc"
            android:text="Waktu Penyakit"
            android:textColor="@color/keempat"
            android:textSize="14sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/recTitle"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/recPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recDesc"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Deskripsi Gejala user apa"
            android:textColor="@color/keempat"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/namaPenyakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Penyakit"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/deskripsiPenyakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:layout_marginStart="20dp"
            android:text="Deskripsi Penyakit"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
